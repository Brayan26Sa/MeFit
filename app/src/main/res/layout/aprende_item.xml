<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/lnyAprende"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/ColorOnTertiary"
    app:cardCornerRadius="35dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/idTVTitleA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:text="Bioquimica"
                android:fontFamily="@font/karla_regular"/>


            <TextView
                android:id="@+id/idTVInfoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/diseno_cardview"
                android:backgroundTint="@color/ColorBackground"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="@string/xtxtConeptoB"
                android:fontFamily="@font/karla_light"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/ColorOnTertiary">

                <ImageView
                    android:id="@+id/idIVAprende"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/backusuario"/>

            </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>