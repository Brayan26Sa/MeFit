<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="35dp"
    app:cardBackgroundColor="@color/ColorOnSecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idTVFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:background="@drawable/diseno_boton"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Food"
            android:fontFamily="@font/montserrat_medium"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/diseno_unic"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="@string/xtxtCarbohidratosux"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/idTVCarbo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/diseno_unic"
                    android:backgroundTint="@color/ColorOnPrimary"
                    android:padding="9dp"
                    android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/diseno_unic"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="@string/xtxtProteinasx"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/idTVProteinas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/diseno_unic"
                    android:backgroundTint="@color/ColorOnPrimary"
                    android:padding="9dp"
                    android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/diseno_unic"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="@string/xtxtGrasasbux"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/idTVGrasas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/diseno_unic"
                    android:backgroundTint="@color/ColorOnPrimary"
                    android:padding="9dp"
                    android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/ColorSecondary"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/xidIVFood"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/backusuario"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/idTVPortion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:text="900gr"
                    android:textColor="@color/black"
                    android:textSize="40dp"
                    android:fontFamily="@font/montserrat_regular"/>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>